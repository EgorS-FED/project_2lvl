include ../../components/color-type/color-type.pug


mixin colors-n-types
    main.main
        .colors-n-types(class='colors')
            ul
                each val, index in plateColors
                    - var plateColor= val
                    each val, index in plateColor
                        li
                            +color-type__color(index)
        .colors-n-types(class='types')
            ul
                each val,    index in typeExamples
                    li
                        +color-type__type(val)